@using KAWebHost.Shared.Components
@inherits LayoutComponentBase


<CascadingValue Value="this" IsFixed="true">
    <!------ header ------>
    <NavMenu CartProductAmount="cartProductAmount"></NavMenu>
    @Body
    <!------ footer ------>
    <Footer></Footer>
</CascadingValue>




@if (isShowAlert)
{
    <AlertComponent AlertTitle="@alertTitle" AlertMessage="@alertMessage" IsForceAuthenAlert="false" OnModalCloseBtnClick="HideAlert" />
}
@if (isShowForceAuthenAlert)
{
    <AlertComponent AlertTitle="@alertTitle" AlertMessage="@alertMessage" IsForceAuthenAlert="true" OnModalCloseBtnClick="HideAuthenAlert" />
}