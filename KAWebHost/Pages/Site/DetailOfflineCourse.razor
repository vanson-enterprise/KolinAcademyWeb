@inherits OwningComponentBase
@page "/khoa-hoc-offline/{CourseSeoName}"
@using KAWebHost.Shared.Components


@if (model.IsUseExternalHtml)
{
    <HeadContent>
       
        <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"
          integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
        <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css"
          integrity="sha512-OTcub78R3msOCtY3Tc6FzeDJ8N9qvQn1Ph49ou13xgA9VsH9+LRxoFU6EqLhW4+PKRfU+/HReXmSZXHEkpYoOA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

        <link href="@model.ExternalCssLink" rel="stylesheet" />
        <PageTitle>@(model?.Name + "- Kolin")</PageTitle>
    </HeadContent>
}


<div>
    <button class="d-none" id="show_registor_modal_btn" @onclick="ShowRegisterOfflineCourseModal"></button>
    @((MarkupString)model.Description)
</div>

@if(isOpenRegisterModal){
    <RegisterOfflineCourseModal CloseModal="HideRegisterOfflineCourseModal" CourseId="model.Id" />
}
