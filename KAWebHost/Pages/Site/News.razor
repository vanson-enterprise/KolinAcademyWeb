@page "/tin-tuc"
@inherits OwningComponentBase

<HeadContent>
    <title>Tin tức - Kolin</title>
</HeadContent>

<div class="news-page">
    <section class="news-container">
        <div class="max-width mx-auto">
            <div class="primary-color title">
                <p class="">TIN TỨC</p>
            </div>
            <div class="row new-banner">
                @if (model.Blogs.Count >= 1)
                {
                    <div class="col-xl-8 col-md-7 col-12">
                        <img src="@model.Blogs[0].ThumbNailImageLink" alt="" />
                    </div>
                    <div class="col-xl-4 col-md-5 col-12">
                        <div class="new-content">
                            <a class="heading" href="@model.Blogs[0].DetailBlogLink">@model.Blogs[0].Title</a>
                            <p class="content">
                                @model.Blogs[0].ShortDescription
                            </p>
                        </div>
                    </div>
                }
            </div>

            <div class="list-new row gy-5">
                @if (model.Blogs.Count >= 2)
                {
                    @for (int i = 1; i < model.Blogs.Count; i++)
                    {
                        <div class="col-xl-4 col-md-6 col-12 new-item">
                            <a class="heading" href="@model.Blogs[i].DetailBlogLink">@model.Blogs[i].Title</a>
                            <div class="content">
                                @model.Blogs[i].ShortDescription
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">
            <li class="page-item" @onclick="()=>OnPageChange(-1)">
                <a class="page-link" href="#" style="pointer-events: none;cursor:default" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= model.TotalPage; i++)
            {
                var index = i;
                <li class="page-item" @onclick="() => OnPageChange(index)"><a class="page-link" style="pointer-events: none;cursor:default" href="#">@i</a></li>
            }
            <li class="page-item" @onclick="()=>OnPageChange(0)">
                <a class="page-link" href="#" style="pointer-events: none;cursor:default" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
