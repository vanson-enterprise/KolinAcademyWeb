@page "/gio-hang"
@inherits OwningComponentBase
<div class="cart-page">
    <section class="cart-container">
        <div class="max-width mx-auto">
            <div class="secondary-color title">
                <p class="">GIỎ HÀNG</p>
            </div>
            @if (cartVm != null && cartVm.CartProductVms != null && cartVm.CartProductVms.Count > 0)
            {
                <div class="list-products">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Khóa học</th>
                                <th scope="col">Số lượng</th>
                                <th scope="col">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cartProduct in cartVm.CartProductVms)
                            {
                                <tr>
                                    <td>@cartProduct.CourseName</td>
                                    <td>01 khóa</td>
                                    <td>@cartProduct.DiscountPrice.ToVietNameseCurrency()</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Tổng</th>
                                <th>@(cartVm.Amount) khóa</th>
                                <th class="secondary-color">@cartVm.StringTotal</th>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="d-flex justify-content-end">
                        <button class="btn-pay" @onclick="InitOrder">Thanh toán</button>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex align-items-center flex-column">
                    <div>Bạn chưa có sản phầm nảo trong giỏ hàng</div>
                    <br>
                    <NavLink href="/khoa-hoc-truc-tuyen" class="btn btn-info">
                        Tiếp tục mua hàng
                    </NavLink>
                </div>
            }
        </div>
    </section>
</div>

