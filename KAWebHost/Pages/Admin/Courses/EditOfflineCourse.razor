@attribute [Authorize(Roles = "Manager,SuperAdmin")]
@page "/manager/edit-off-course/{id:int}"
@using Blazored.TextEditor
@using KAWebHost.Pages.Admin.Components
@using KAWebHost.Shared.Validator
@inherits OwningComponentBase
@inject NavigationManager NavigationManager

<div class="d-flex flex-column-fluid ">
    <div class="container-fluid">
        <div class="card-header ">
            <h3 class="card-title">Sửa khóa học offline</h3>
        </div>
        <div class="card-body" style="background-color: #fff">
            <!--begin::Stepper-->
            <div class="stepper stepper-pills" id="kt_stepper_example_basic">
                <!--begin::Nav-->
                <div class="stepper-nav flex-center flex-wrap mb-10">
                    <!--begin::Step 1-->
                    <div class="stepper-item mx-2 my-4 current" data-kt-stepper-element="nav">
                        <!--begin::Line-->
                        <div class="stepper-line w-40px"></div>
                        <!--end::Line-->
                        <!--begin::Icon-->
                        <div class="stepper-icon w-40px h-40px">
                            <i class="stepper-check fas fa-check"></i>
                            <span class="stepper-number">1</span>
                        </div>
                        <!--end::Icon-->
                        <!--begin::Label-->
                        <div class="stepper-label">
                            <h3 class="stepper-title">
                                Thông tin chung
                            </h3>

                            <div class="stepper-desc">
                                Sửa khóa học
                            </div>
                        </div>
                        <!--end::Label-->
                    </div>
                    <!--end::Step 1-->
                    <!--begin::Step 2-->
                    <div class="stepper-item mx-2 my-4 " data-kt-stepper-element="nav">
                        <!--begin::Line-->
                        <div class="stepper-line w-40px"></div>
                        <!--end::Line-->
                        <!--begin::Icon-->
                        <div class="stepper-icon w-40px h-40px">
                            <i class="stepper-check fas fa-check"></i>
                            <span class="stepper-number">2</span>
                        </div>
                        <!--begin::Icon-->
                        <!--begin::Label-->
                        <div class="stepper-label">
                            <h3 class="stepper-title">
                                Ngày khai giảng
                            </h3>
                            <div class="stepper-desc">
                                Sửa ngày khai giảng
                            </div>
                        </div>
                        <!--end::Label-->
                    </div>
                    <!--end::Step 2-->
                    <!--begin::Step 3-->
                    <div class="stepper-item mx-2 my-4" data-kt-stepper-element="nav">
                        <!--begin::Line-->
                        <div class="stepper-line w-40px"></div>
                        <!--end::Line-->
                        <!--begin::Icon-->
                        <div class="stepper-icon w-40px h-40px">
                            <i class="stepper-check fas fa-check"></i>
                            <span class="stepper-number">3</span>
                        </div>
                        <!--begin::Icon-->
                        <!--begin::Label-->
                        <div class="stepper-label">
                            <h3 class="stepper-title">
                                Xác nhận
                            </h3>

                            <div class="stepper-desc">
                                Xác nhận tạo đơn
                            </div>
                        </div>
                        <!--end::Label-->
                    </div>
                    <!--end::Step 3-->

                </div>
                <!--end::Nav-->
                <!--begin::Container-->
                <div id="kt_stepper_example_basic_form">
                    <!--begin::Group-->
                    <div class="mb-5">
                        <!--begin::Step 1-->
                        <div class="flex-column current" data-kt-stepper-element="content">
                            <EditForm Model="@courseModel" OnValidSubmit="UpdateCourse">
                                <DataAnnotationsValidator />
                                <div class="row mb-4">
                                    <div class="col-12">
                                        <label for="course-name" class="form-label required">Tên khóa học</label>
                                        <InputText @bind-Value="courseModel.Name" id="course-name" class="form-control"></InputText>
                                        <ValidationMessage For="@(()=>courseModel.Name)"></ValidationMessage>
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-3">
                                        <label for="course_code" class="form-label required">Mã khóa học</label>
                                        <InputText id="course_code" @bind-Value="courseModel.Code" class="form-control" placeholder="Nhập mã khóa học" disabled />
                                        <ValidationMessage For="@(()=>courseModel.Code)"></ValidationMessage>
                                    </div>
                                    <div class="col-3">
                                        <label for="course_order" class="form-label">Thứ tự hiển thị (từ cao đến thấp)</label>
                                        <InputNumber @bind-Value="courseModel.Sort" class="form-control" placeholder="Nhập tag"></InputNumber>
                                    </div>
                                    <div class="col-3">
                                        <label class="form-label">Giá gốc</label>
                                        <InputNumber @bind-Value="courseModel.Price"
                                                     min="0" class="form-control"
                                                     aria-label="Sizing example input"
                                                     aria-describedby="inputGroup-sizing-sm" />

                                        <ValidationMessage For="@(()=>courseModel.Price)"></ValidationMessage>
                                    </div>
                                    <div class="col-3">
                                        <label class="form-label">Giá khuyến mãi</label>
                                        <InputNumber @bind-Value="courseModel.DiscountPrice"
                                                     min="0" class="form-control"
                                                     aria-label="Sizing example input"
                                                     aria-describedby="inputGroup-sizing-sm" />
                                        <ValidationMessage For="@(()=>courseModel.DiscountPrice)"></ValidationMessage>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-12 mb-5">
                                        <label for="course_meta_keyword" class="form-label">Meta Keywords</label>
                                        <InputText id="course_meta_keyword" @bind-Value="courseModel.MetaKeyWord" class="form-control" placeholder="Nhập meta keywords" />
                                    </div>
                                    <div class="col-12 mb-5">
                                        <label for="course_meta_title" class="form-label">Meta Title</label>
                                        <InputText id="course_meta_title" @bind-Value="courseModel.MetaTitle" class="form-control" placeholder="Nhập meta title" />
                                    </div>
                                    <div class="col-12 mb-5">
                                        <label for="course_meta_description" class="form-label">Meta Description</label>
                                        <InputText id="course_meta_description" @bind-Value="courseModel.MetaDescription" class="form-control" placeholder="Nhập meta description" />
                                    </div>
                                    <div class="col-12 mb-5">
                                        <label for="course_intro_video" class="form-label">Đường dẫn video giới thiệu</label>
                                        <InputText id="course_intro_video" @bind-Value="courseModel.IntroduceVideoLink" class="form-control" placeholder="Nhập đường dẫn video giới thiệu" />
                                    </div>
                                    
                                </div>
                                <div class="row mb-5">
                                    <div class="col-3">
                                        <button type="button" class="btn btn-primary" @onclick='()=>OpenSelectImageModal("TN")'>
                                            THÊM ẢNH BÌA
                                        </button>
                                    </div>
                                    <div class="col-9">
                                        @if (courseModel.ThumbNailImageLink != null)
                                        {
                                            <img src="@courseModel.ThumbNailImageLink" alt="thumbnail-image" style="max-width: 150px" />
                                        }
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-12">
                                        <label class="form-label">Mô tả ngắn</label>
                                        <InputTextArea @bind-Value="courseModel.ShortDescription"
                                                        class="form-control"
                                                        style="height:100px"
                                                        aria-label="With textarea"
                                                        
                                                        placeholder="Nhập mô tả">
                                        </InputTextArea>
                                    </div>
                                </div>
                                 <AuthorizeView Roles="SuperAdmin">
                                    <ChildContent Context="another_context">
                                        <div class="row">
                                            <div class="col-12 mb-5">
                                                <div class="form-check form-check-custom form-check-solid">
                                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" @bind="courseModel.IsUseExternalHtml" />
                                                    <label class="form-check-label" for="flexCheckDefault">
                                                        External Html
                                                    </label>
                                                </div>
                                            </div>
                                            @if (courseModel.IsUseExternalHtml)
                                            {
                                                <div class="col-12 mb-5">
                                                    <label for="course_html" class="form-label">HTML Code</label>
                                                    <InputTextArea @bind-Value="courseModel.Description"
                                                               class="form-control" style="height:100px"
                                                               aria-label="With textarea"
                                                               placeholder="Nhập html source">
                                                    </InputTextArea>
                                                </div>
                                                <div class="col-12 mb-5">
                                                    <label class="form-label">CSS Link</label>
                                                    <InputText @bind-Value="courseModel.ExternalCssLink" class="form-control" placeholder="Nhập css link" />
                                                </div>
                                                 <div class="col-12 mb-5">
                                                    <label class="form-label">Script Link</label>
                                                    <InputText @bind-Value="courseModel.ExternalScriptLink" class="form-control" placeholder="Nhập script link" />
                                                </div>
                                            }
                                        </div>
                                    </ChildContent>
                                </AuthorizeView>
                                @if (!courseModel.IsUseExternalHtml)
                                {
                                    <div class="row mb-5">
                                        <div class="col-12">
                                            <BlazoredTextEditor @ref="@quillHtml">
                                                <ToolbarContent>
                                                    <select class="ql-header">
                                                        <option selected=""></option>
                                                        <option value="1"></option>
                                                        <option value="2"></option>
                                                        <option value="3"></option>
                                                        <option value="4"></option>
                                                        <option value="5"></option>
                                                    </select>
                                                    <span class="ql-formats">
                                                        <button class="ql-bold"></button>
                                                        <button class="ql-italic"></button>
                                                        <button class="ql-underline"></button>
                                                        <button class="ql-strike"></button>
                                                    </span>
                                                    <span class="ql-formats">
                                                        <select class="ql-color"></select>
                                                        <select class="ql-background"></select>
                                                    </span>
                                                    <span class="ql-formats">
                                                        <button class="ql-list" value="ordered"></button>
                                                        <button class="ql-list" value="bullet"></button>
                                                    </span>
                                                    <span class="ql-formats">
                                                        <button class="ql-link"></button>
                                                    </span>
                                                    <span class="ql-formats">
                                                        <button type="button" class="btn btn-link" id="custom-button" style="background-image: url('img/icon/imageicon.png')"
                                                            @onclick='()=>OpenSelectImageModal("TE")'>
                                                        </button>
                                                    </span>
                                                </ToolbarContent>
                                                <EditorContent>
                                                    @(
                                                        (MarkupString)courseModel.Description
                                                        )
                                                </EditorContent>
                                            </BlazoredTextEditor>
                                        </div>
                                    </div>
                                }
                                <div class="row mb-5">
                                    <div class="col-9">
                                        <label for="course_tag" class="form-label">Tags</label>
                                        <InputText id="course-tag" @bind-Value="courseModel.Tag" class="form-control" placeholder="Nhập tag"></InputText>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-check form-check-custom form-check-solid mt-10 ms-10">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" @bind="courseModel.IsActive" />
                                            <label class="form-check-label" for="flexCheckDefault">
                                                Kích hoạt
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end d-none">
                                    <button type="submit" id="course_form_submit_btn" class="btn btn-primary">Tạo mới</button>
                                </div>
                            </EditForm>
                        </div>
                        <!--end::Step 1-->
                        <!--begin::Step 2-->
                        <div class="flex-column " data-kt-stepper-element="content">
                            <div class="row gy-5">
                                <div class="col-xl-7">
                                    <EditForm Model="@startDateModel" OnValidSubmit="@SubmitStartDateForm" id="startDate_form">
                                        <DataAnnotationsValidator />
                                        <div class="card shadow-sm">
                                            <div class="card-header">
                                                @if (isEditingStartDate)
                                                {
                                                    <h3 class="card-title">Cập nhật ngày khai giảng</h3>
                                                }
                                                else
                                                {
                                                    <h3 class="card-title">Thêm ngày khai giảng</h3>
                                                }

                                            </div>
                                            <div class="card-body">
                                                <div class="row mb-2">
                                                    <div class="col-xl-12 col-md-12 col-12">
                                                        <label class="form-label required">Chọn ngày khai giảng</label>
                                                        <RadzenDatePicker @bind-Value=@startDateModel.StartTime DateFormat="dd/MM/yyyy" Date Class="w-100 " />
                                                        <ValidationMessage For="@(()=>startDateModel.StartTime)"></ValidationMessage>
                                                    </div>
                                                    <div class="col-xl-12 col-md-12 col-12 mt-10">
                                                        <label class="form-label required">Địa điểm</label>
                                                        <InputText id="course_meta_keyword" @bind-Value="startDateModel.Place" class="form-control" placeholder="Nhập nơi diễn ra" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" id="startdate_form_submit" style="display:none">Submit</button>
                                    </EditForm>
                                </div>
                                <div class="col-xl-5">
                                    <div class="row m-0">
                                        <div class="card shadow-sm">
                                            <div class="card-header">
                                                <h3 class="card-title">Tổng số ngày khai giảng</h3>
                                                <div class="card-toolbar">
                                                    <h3>@(s_startDates.Count)</h3>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <table width="100%" class="">
                                                    <thead>
                                                        <tr>
                                                            <td width="30%"></td>
                                                            <td width="50%"></td>
                                                            <td width="10%"></td>
                                                            <td width="10%"></td>
                                                        </tr>
                                                    </thead>

                                                    @for (int i = 1; i <= s_startDates.Count; i++)
                                                    {
                                                        int index = i - 1;
                                                        <tr>
                                                            <td class="p-2">@s_startDates[index].StartTime.ToString("dd/MM/yyy")</td>
                                                            <td class="p-2">@s_startDates[index].Place</td>
                                                            <td class="p-2">
                                                                <button class="btn btn-icon btn-sm btn-light-primary" @onclick=@(e => TurnOnEditStartDateForm(index))>
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                                                    </svg>
                                                                </button>
                                                            </td>
                                                            <td class="p-2">
                                                                <button class="btn btn-icon  btn-sm btn-light-danger" @onclick=@(e => ShowConfirmDeleteStartDateModal(s_startDates[index].Id))>
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                                                    </svg>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }


                                                </table>
                                            </div>
                                        </div>

                                        <div class="col" style="display: @(isEditingStartDate ? "block" : "none")">
                                            <button type="button" class="btn btn-secondary mt-6 w-100" @onclick="TurnOffEditStartDateForm">
                                                HỦY
                                            </button>
                                        </div>

                                        <div class="col" style="display: @(isEditingStartDate ? "block" : "none")">
                                            <button type="button" class="btn btn-success mt-6 w-100" id="update_sd_btn">
                                                CẬP NHẬT
                                            </button>
                                        </div>

                                        <button type="button" class="btn btn-light-primary mt-6" id="add_sd_btn" style="display: @(isEditingStartDate ? "none" : "block")">
                                            <span class="svg-icon svg-icon-1">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                                </svg>
                                            </span>
                                            THÊM NGÀY KHAI GIẢNG
                                        </button>


                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end::Step 2-->
                        <!--begin::Step 3-->
                        <div class="flex-column" data-kt-stepper-element="content">
                            <div class="d-flex justify-content-center flex-column align-items-center" style="height: 300px">
                                <p>Kiểm tra xem tất cả các chi tiết có đúng không, sau đó nhấp vào 'Xác nhận'.</p>
                                <button type="button" class="btn btn-light-success" @onclick=(CompleteEdit)> XÁC NHẬN</button>
                            </div>
                        </div>
                        <!--begin::Step 3-->
                    </div>
                    <!--end::Group-->
                    <!--begin::Actions-->
                    <div class="d-flex flex-stack">
                        <!--begin::Wrapper-->
                        <div class="me-2">
                            <button type="button" class="btn btn-light btn-active-light-primary" data-kt-stepper-action="previous">
                                TRỞ LẠI
                            </button>
                        </div>
                        <!--end::Wrapper-->
                        <!--begin::Wrapper-->
                        <div>
                            <button type="button" class="btn btn-primary" data-kt-stepper-action="next">
                                TIẾP TỤC
                            </button>
                        </div>
                        <!--end::Wrapper-->
                    </div>
                    <!--end::Actions-->
                </div>
                <!--end::Container-->
            </div>
            <!--end::Stepper-->

        </div>
    </div>
</div>

<FileSelector @ref="fileSelectorControl" OnFileSelected="InsertImage" />
@if (showConfirmDeleteStartDate)
{
    <ConfirmModal Message="Bạn có chắc muốn xóa ngày khai giảng này"
              Title="Xác nhận xóa ngày khai giảng"
              OnClose="DeleteStartDate"></ConfirmModal>
}