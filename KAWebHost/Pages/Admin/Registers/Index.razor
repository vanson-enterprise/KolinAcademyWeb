@attribute [Authorize(Roles = "Manager")]
@page "/manager/offline-course-register"
@using KA.ViewModels.Courses
@using KAWebHost.Pages.Admin.Components
@inherits OwningComponentBase

<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Card-->
        <div class="card card-flush">
            <!--begin::Card header-->
            <div class="card-header mt-6">
                <h3 class="card-title">Danh sách đăng ký khóa học offline</h3>
                <div class="card-toolbar">
                    <div class="d-flex justify-content-end position-relative my-1 me-5">
                        <EditForm Model="searchModel" OnSubmit="SearchRegister">
                            <div class="d-flex justify-content-end">
                                <div class="me-5" style="width:250px">
                                    <Select2 Id="offline-course-selector"
                                             DataSource="offlineCourses"
                                             OnSelected="OnCourseSelected"
                                             @bind-Value="searchModel.CourseId"
                                             TValue="int"
                                             Placeholder="Chọn khóa học" />
                                </div>
                                <div class="me-5">
                                    <input class="form-control" placeholder="Từ ngày" id="kt_datepicker_1" @bind="searchModel.FromDate" />
                                </div>
                                <div class="me-5">
                                    <input class="form-control" placeholder="Đến ngày" id="kt_datepicker_2" @bind="searchModel.ToDate" />
                                </div>
                                <div class="me-5">
                                    <button class="btn btn-primary" type="submit">Search</button>
                                </div>
                            </div>
                        </EditForm>
                        <button type="button" class="btn btn-light-primary me-3" data-bs-toggle="modal" data-bs-target="#kt_customers_export_modal" @onclick="ExportXLS">
                            <!--begin::Svg Icon | path: icons/duotune/arrows/arr078.svg-->
                            <span class="svg-icon svg-icon-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect opacity="0.3" x="12.75" y="4.25" width="12" height="2" rx="1" transform="rotate(90 12.75 4.25)" fill="black"></rect>
                                    <path d="M12.0573 6.11875L13.5203 7.87435C13.9121 8.34457 14.6232 8.37683 15.056 7.94401C15.4457 7.5543 15.4641 6.92836 15.0979 6.51643L12.4974 3.59084C12.0996 3.14332 11.4004 3.14332 11.0026 3.59084L8.40206 6.51643C8.0359 6.92836 8.0543 7.5543 8.44401 7.94401C8.87683 8.37683 9.58785 8.34458 9.9797 7.87435L11.4427 6.11875C11.6026 5.92684 11.8974 5.92684 12.0573 6.11875Z" fill="black"></path>
                                    <path d="M18.75 8.25H17.75C17.1977 8.25 16.75 8.69772 16.75 9.25C16.75 9.80228 17.1977 10.25 17.75 10.25C18.3023 10.25 18.75 10.6977 18.75 11.25V18.25C18.75 18.8023 18.3023 19.25 17.75 19.25H5.75C5.19772 19.25 4.75 18.8023 4.75 18.25V11.25C4.75 10.6977 5.19771 10.25 5.75 10.25C6.30229 10.25 6.75 9.80228 6.75 9.25C6.75 8.69772 6.30229 8.25 5.75 8.25H4.75C3.64543 8.25 2.75 9.14543 2.75 10.25V19.25C2.75 20.3546 3.64543 21.25 4.75 21.25H18.75C19.8546 21.25 20.75 20.3546 20.75 19.25V10.25C20.75 9.14543 19.8546 8.25 18.75 8.25Z" fill="#C4C4C4"></path>
                                </svg>
                            </span>
                            <!--end::Svg Icon-->Export
                        </button>
                        @*<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_customer">Search</button>*@
                    </div>
                </div>
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
                @if (dataGrid != null)
                {
                    <RadzenDataGrid AllowFiltering="true"
                                AllowColumnResize="false"
                                AllowAlternatingRows="false"
                                FilterMode="FilterMode.Simple"
                                AllowSorting="true"
                                AllowPaging="false"
                                PagerHorizontalAlign="HorizontalAlign.Left"
                                SelectionMode="DataGridSelectionMode.Single"
                                Data="@dataGrid.Items"
                                TItem="OfflineCourseRegisterVm"
                                LogicalFilterOperator="LogicalFilterOperator.And">
                        <Columns>
                            <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Property="Index" Filterable="false" Title="STT" Width="60px" TextAlign="TextAlign.Center" />

                            <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Property="FullName" Title="Tên khách hàng" Width="250px" />
                            <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Property="PhoneNumber" Title="Số diện thoại" Width="150px" />
                            <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Property="CourseName" Title="Tên khóa học" MinWidth="350px" />
                            <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Property="Email" Title="Email" Width="250px" />
                            <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Property="MemberAmount" Title="Số lượng học viên" Width="150px" />
                            <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Property="CreatedDate" Title="Ngày đăng ký" Width="150px" />
                            @*<RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Context="dataContext" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="50px">
                        <Template Context="course">
                        <RadzenButton Icon="edit"
                        ButtonStyle="ButtonStyle.Light"
                        Class="m-1"
                        Click="@(args => EditRow(course))"
                        @onclick:stopPropagation="true">
                        </RadzenButton>
                        </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="OfflineCourseRegisterVm" Context="dataContext" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="60px">
                        <Template Context="course">
                        <RadzenButton ButtonStyle="ButtonStyle.Danger"
                        Icon="delete"
                        Size="ButtonSize.Medium"
                        Class="m-2"
                        @onclick:stopPropagation="true"
                        Click="@(args =>DeleteCourse(course.Id))">
                        </RadzenButton>
                        </Template>
                        </RadzenDataGridColumn>*@
                        </Columns>
                    </RadzenDataGrid>
                    <RadzenPager ShowPagingSummary="true" PagingSummaryFormat="@pagingSummaryFormat" HorizontalAlign="HorizontalAlign.Right" Count="dataGrid.TotalItem" PageSize="@pageSize" PageNumbersCount="5" PageChanged="@PageChanged" />
                }
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Container-->
</div>