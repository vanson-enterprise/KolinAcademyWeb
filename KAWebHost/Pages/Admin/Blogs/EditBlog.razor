@page "/manager/edit-blog/{blogId:int}"
@using KAWebHost.Pages.Admin.Components
@using Blazored.TextEditor
@using KAWebHost.Shared.Validator
@inherits OwningComponentBase

<div class="d-flex flex-column-fluid">
    <div class="container-fluid">
        <div class="card card-flush">
            <div class="card-header ">
                <h3 class="card-title">Sửa blog</h3>
            </div>
            <div class="card-body">
                <EditForm Model="@model" OnValidSubmit="@SubmitForm">
                    <DataAnnotationsValidator />
                    <div class="row mb-5">
                        <div class="col-12">
                            <label for="course_name" class="form-label required">Tiêu đề</label>
                            <InputText @bind-Value="model.Title" class="form-control" placeholder="Nhập tiêu đề" />
                            <ValidationMessage For="@(()=>model.Title)"></ValidationMessage>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 mb-5">
                            <label for="course_meta_keyword" class="form-label">Meta Keywords</label>
                            <InputText id="course_meta_keyword" @bind-Value="model.MetaKeyWord" class="form-control" placeholder="Nhập meta keywords" />
                        </div>
                        <div class="col-12 mb-5">
                            <label for="course_meta_title" class="form-label">Meta Title</label>
                            <InputText id="course_meta_title" @bind-Value="model.MetaTitle" class="form-control" placeholder="Nhập meta title" />
                        </div>
                        <div class="col-12 mb-5">
                            <label for="course_meta_description" class="form-label">Meta Description</label>
                            <InputText id="course_meta_description" @bind-Value="model.MetaDescription" class="form-control" placeholder="Nhập meta description" />
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-3">
                            <button type="button" class="btn btn-primary" @onclick="()=>OpenSelectImageModal(false)">
                                THAY ẢNH BÌA
                            </button>
                        </div>
                        <div class="col-9">
                            @if (model.ThumbNailImageLink != null)
                            {
                                <img src="@model.ThumbNailImageLink" alt="thumbnail-image" style="max-width: 150px" />
                            }
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-12">
                            <label class="form-label">Mô tả ngắn</label>
                            <InputTextArea @bind-Value="model.ShortDescription"
                                           class="form-control" style="height:100px"
                                           aria-label="With textarea"
                                           placeholder="Nhập mô tả ngắn">
                            </InputTextArea>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-12">
                            <label class="form-label required">Nội dung bài viết</label>
                            <textarea placeholder="Nhập mô tả" class="form-control" id="app-text-editor" name="Content">
                                @model.Content
                            </textarea>

                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-2">
                            <label class="form-lable">Loại blog</label>
                            <Select2 Id="blog_type_selector"
                                     DataSource="blogTypes"
                                     TValue="string"
                                     @bind-Value="model.BlogType"
                                     Placeholder="Chọn loại blog">
                            </Select2>
                            <ValidationMessage For="()=>model.BlogType"></ValidationMessage>
                        </div>
                        <div class="col-2">
                            <div class="form-check form-check-custom form-check-solid mt-10 ms-10">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" @bind="model.Published" />
                                <label class="form-check-label" for="flexCheckDefault">
                                    Xuất bản
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="float-end">
                        <button type="submit" class="btn btn-primary" id="course_form_submit_btn">Cập nhật</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<FileSelector @ref="fileSelectorControl" OnFileSelected="InsertImage" />