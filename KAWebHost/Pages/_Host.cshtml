@page "/"
@namespace KAWebHost.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var path = ViewContext.RouteData.Values["Path"]?.ToString();
    var adminPages = new List<string> { "manager", "Manager" };
    //&& User.IsInRole("Admin")

    if (path != null && adminPages.Any(path.Contains))
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}
<div id="reconnect-modal" style="display: none;"></div>
<component type="typeof(App)" render-mode="ServerPrerendered" />
